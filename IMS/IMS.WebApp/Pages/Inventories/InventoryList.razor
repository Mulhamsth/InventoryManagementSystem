@page "/inventories"
@inject NavigationManager NavigationManager

<MudStack Row="true" Class="d-flex justify-content-between">
<MudText Typo="Typo.h3">InventoryList</MudText>
<MudButton ButtonType="ButtonType.Button" Color="Color.Info" Variant="Variant.Filled" OnClick="AddInventory">Add Inventory</MudButton>
</MudStack>
<br />
<SearchInventoryComponent OnSearchInventory="OnInventorySearch"></SearchInventoryComponent>
<br />
<InventoryListComponent searchTerm="@searchterm"></InventoryListComponent>
<br />

@code {
	private string searchterm = "";

	private void OnInventorySearch(string searchterm)
	{
		this.searchterm = searchterm;
	}

	private void AddInventory()
	{
		NavigationManager.NavigateTo("/addinventory");
	}
}
